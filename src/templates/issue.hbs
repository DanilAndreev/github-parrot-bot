<b>{{webhook/repository}}</b> #{{info/tag}}
#issue <i>{{info/state}}</i>

<b>{{info/title}}</b>
{{#if info/body}}
    {{info/body}}
{{/if}}

{{#if info/labels}}
    <b>Labels:</b>
    {{#each info/labels}}
        <code>{{name}}</code>
    {{/each}}
{{/if}}
{{#if info/opened_by}}<b>Opened by:</b> {{info/opened_by}}{{/if}}
{{#if info/assignees}}
    <b>Assignees:</b> {{#each info/assignees}}{{login}} {{/each}}
{{/if}}
{{#if info/milestone}}
    <b>Milestone</b> <i>{{info/milestone/title}}</i> {{#if info/milestone/due_on}}<code>{{info/milestone/due_on}}</code>{{/if}}
{{/if}}
