<b>{{repository}}</b> #{{tag}}
#issue <i>{{state}}</i>

<b>{{title}}</b>
{{#if body}}
    {{body}}
{{/if}}

{{#if labels}}
    <b>Labels:</b>
    {{#each labels}}
        <code>{{name}}</code>
    {{/each}}
{{/if}}
{{#if assignees}}
    {{#if opened_by}}<b>Opened by:</b> {{opened_by}}{{/if}}
    <b>Assignees:</b> {{#each assignees}}{{login}} {{/each}}
{{/if}}
{{#if milestone}}
    <b>Milestone</b> <i>{{milestone/title}}</i> {{#if milestone/due_on}}<code>{{milestone/due_on}}</code>{{/if}}
{{/if}}
