<b>{{webhook/repository}}</b> #{{info/tag}}
#pullrequest <i>{{state}}</i>

<b>{{info/title}}</b>
{{#if info/body}}
    {{info/body}}
{{/if}}

{{#if info/labels}}
    <b>Labels:</b>
    {{#each info/labels}}
        <code>{{name}}</code>
    {{/each}}
{{/if}}
{{#if info/assignees}}
    {{#if info/opened_by}}<b>Opened by:</b> {{info/opened_by}}{{/if}}
    <b>Assignees:</b> {{#each info/assignees}}{{login}} {{/each}}
{{/if}}
{{#if info/requested_reviewers}}
    <b>Requested review: </b>{{#each info/requested_reviewers}}{{login}} {{/each}}
{{/if}}
{{#if info/milestone}}
    <b>Milestone</b> <i>{{info/milestone/title}}</i> {{#if info/milestone/due_on}}<code>{{info/milestone/due_on}}</code>{{/if}}
{{/if}}
{{#if checksuits}}
    {{#each checksuits}}
        ───────────
        <b>Suite:</b> <b><i>{{info/status}} {{info/conclusion}}</i></b>
        {{#if runs}}
            <i>Runs:</i>
            {{#each runs}}
                <b>{{name}}</b>: <i>{{info/status}}</i>
            {{/each}}
        {{/if}}
        {{#unless runs}}
            <i>Suite has no runs.</i>
        {{/unless}}
    {{/each}}
{{/if}}
